<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
@model ApplicationCore.Models.CastDetailsModel

<div class="container-fluid">
    <div class="row my-2">
        <div class="col">
            <img src="@Model.ProfilePath" height="100px" alt="@Model.Name" class="img-fluid"/>
        </div>
        <div class="col">
            <h2 class="my-2"><a href=@Model.TmdbUrl>@Model.Name</a></h2>
            <br/>
            <h3> Gender: 
            @if(Int32.Parse(Model.Gender) == 1)
            {
                <nobr>Female</nobr>
            }
            else if(Int32.Parse(Model.Gender) == 2)
            {
                <nobr>Male</nobr>
            }
            else
            {
                <nobr>N/A</nobr>
            }
            </h3>
            <br/>
        </div>
    </div>
    <br/>
    <div class="row my-2">
        <h3 class="my-2">Movies:</h3>
        @foreach (var movie in @Model.Movies)
        {
            <div class="col-6 col-xl-2 col-sm-4 col-lg-3 ">
                <partial name="_MovieCard" model="movie" />
            </div>
        }
    </div>
</div>